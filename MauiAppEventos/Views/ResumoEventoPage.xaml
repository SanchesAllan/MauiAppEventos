<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoEventoPage"
             Title="Resumo do Evento"
             BackgroundColor="DarkGreen">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="15" WidthRequest="360">

            <Label Text="Resumo do Evento" FontSize="22" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" />

            <Label x:Name="ResumoLabel"
                   FontSize="16"
                   TextColor="White"
                   LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>